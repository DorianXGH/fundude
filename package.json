{
  "name": "fundude",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Benjamin Feng <contact@fengb.me>",
  "license": "MIT",
  "scripts": {
    "dev": "npm-run-all --parallel dev:*",
    "dev:parcel": "parcel index.html",
    "dev:wasm": "watch 'npm run build:wasm' src/wasm",
    "build": "npm run build-wasm && npm run build:parcel",
    "build:parcel": "parcel build index.html",
    "build:wasm": "mkdir -p build && emcc -o build/fundude.wasm -Os src/wasm/*.c"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "parcel-bundler": "^1.12.3",
    "typescript": "^3.3.4000",
    "watch": "^1.0.2"
  }
}
